{
    "configurations": [
        {
            "name": "Debug Qt Application with cppdbg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "visualizerFile": "${command:qt-official.natvis}",
            "showDisplayString": true,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "environment": [
                    {
                        "name": "PATH",
                        "value": "${env:PATH};${command:qt-official.kitDirectory}${/}bin"
                    }
                ],
                "MIMode": "gdb",
                "miDebuggerPath": "${command:qt-official.minGWgdb}"
            }
        },
        {
            "name": "Debug Qt Application with Visual Studio Debugger",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            //"visualizerFile": "${command:qt-official.natvis}",
            "windows": {
                "environment": [
                    {
                        "name": "PATH",
                        "value": "${env:PATH};${command:qt-official.kitDirectory}${/}bin"
                    }
                ]
            }
        }
    ]
}