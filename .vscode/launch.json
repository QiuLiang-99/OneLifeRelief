{
    "configurations": [
        {
            "name": "Debug Qt Application with Visual Studio Debugger",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            //"visualizerFile": "${command:qt-official.natvis}",
            "windows": {
                "environment": [
                    {
                        "name": "PATH",
                        "value": "${env:PATH};${command:qt-official.kitDirectory}${/}bin"
                    }
                ]
            }
        }
    ]
}